{
  "entities": {
    "Restaurant": {
      "title": "Restaurant",
      "description": "A restaurant entry",
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "The name of the restaurant"
        },
        "cuisine": {
          "type": "string",
          "description": "The type of cuisine the restaurant serves"
        },
        "rating": {
          "type": "number",
          "description": "The rating of the restaurant"
        },
        "imageUrl": {
          "type": "string",
          "description": "URL of an image of the restaurant"
        },
        "imageHint": {
          "type": "string",
          "description": "A hint for AI to find a relevant image"
        }
      },
      "required": [
        "name",
        "cuisine"
      ]
    },
    "MenuItem": {
      "title": "Menu Item",
      "description": "An item on a restaurant's menu",
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "The name of the menu item"
        },
        "description": {
          "type": "string",
          "description": "A description of the menu item"
        },
        "price": {
          "type": "number",
          "description": "The price of the menu item"
        },
        "imageUrl": {
          "type": "string",
          "description": "URL of an image of the menu item"
        },
        "imageHint": {
          "type": "string",
          "description": "A hint for AI to find a relevant image"
        },
        "available": {
          "type": "boolean",
          "description": "Whether the menu item is currently available"
        }
      },
      "required": [
        "name",
        "price",
        "available"
      ]
    },
    "UserProfile": {
      "title": "User Profile",
      "description": "Stores user profile information",
      "type": "object",
      "properties": {
        "email": {
          "type": "string",
          "description": "User's email"
        },
        "role": {
          "type": "string",
          "description": "User's role",
          "enum": [
            "customer",
            "restaurant",
            "delivery"
          ]
        },
        "restaurantId": {
          "type": "string",
          "description": "The ID of the restaurant owned by the user (if role is 'restaurant')"
        }
      },
      "required": [
        "email",
        "role"
      ]
    },
    "Order": {
      "title": "Order",
      "description": "Represents a customer order",
      "type": "object",
      "properties": {
        "customerId": {
          "type": "string",
          "description": "The UID of the customer who placed the order."
        },
        "customerName": {
          "type": "string",
          "description": "The display name of the customer."
        },
        "status": {
          "type": "string",
          "enum": [
            "Pending",
            "In Progress",
            "Delivered",
            "Cancelled"
          ],
          "description": "The current status of the order."
        },
        "total": {
          "type": "number",
          "description": "The total price of the order."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "Timestamp when the order was created."
        },
        "items": {
          "type": "array",
          "description": "List of items in the order.",
          "items": {
            "type": "object",
            "properties": {
              "itemId": {
                "type": "string"
              },
              "name": {
                "type": "string"
              },
              "price": {
                "type": "number"
              },
              "quantity": {
                "type": "number"
              }
            },
            "required": [
              "itemId",
              "name",
              "price",
              "quantity"
            ]
          }
        }
      },
      "required": [
        "customerId",
        "customerName",
        "status",
        "total",
        "createdAt",
        "items"
      ]
    },
    "DeliveryJob": {
      "title": "Delivery Job",
      "description": "Represents a delivery job for an agent",
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "orderId": {
          "type": "string"
        },
        "restaurantName": {
          "type": "string"
        },
        "restaurantAddress": {
          "type": "string"
        },
        "customerAddress": {
          "type": "string"
        },
        "status": {
          "type": "string"
        },
        "restaurantCoords": {
          "type": "object",
          "properties": {
            "lat": {
              "type": "number"
            },
            "lng": {
              "type": "number"
            }
          }
        },
        "customerCoords": {
          "type": "object",
          "properties": {
            "lat": {
              "type": "number"
            },
            "lng": {
              "type": "number"
            }
          }
        }
      },
      "required": [
        "id",
        "orderId",
        "restaurantName",
        "customerAddress",
        "status"
      ]
    }
  },
  "auth": {
    "providers": [
      "Email",
      "Google"
    ]
  },
  "firestore": {
    "/restaurants/{restaurantId}": {
      "schema": {
        "$ref": "#/backend/entities/Restaurant"
      },
      "description": "Restaurant documents"
    },
    "/restaurants/{restaurantId}/menuItems/{menuItemId}": {
      "schema": {
        "$ref": "#/backend/entities/MenuItem"
      },
      "description": "Menu item documents for a specific restaurant"
    },
    "/users/{userId}": {
      "schema": {
        "$ref": "#/backend/entities/UserProfile"
      },
      "description": "User profile documents"
    },
    "/restaurants/{restaurantId}/orders/{orderId}": {
      "schema": {
        "$ref": "#/backend/entities/Order"
      },
      "description": "Order documents for a specific restaurant"
    },
    "/deliveries/{deliveryId}": {
      "schema": {
        "$ref": "#/backend/entities/DeliveryJob"
      },
      "description": "Delivery job documents"
    }
  }
}
